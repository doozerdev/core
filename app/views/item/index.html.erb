<h1>All Lists</h1>

<%= link_to "New List", new_item_path %>

<% if @items.count > 0 %>
  <ul>
    <% @items.each do |item| %>
    <li><%= link_to raw('<span class="glyphicon glyphicon-remove-sign"></span>'), item, method: :delete, data: { confirm: 'Are you sure? This will destroy all items in the list as well.' }, :class=>'text-danger' %> <%= link_to item.title, item_path(item._id) %></li>
  <% end %>
  </ul>
<% end %>
